.mainHeader
  position fixed
  top 0
  left 0
  right 0
  z-index 2000
  transition .2s
  &_fixed
    background rgba(#fff, .9)
    box-shadow 0 1px 2px #c9c8c5
  &__container
    display flex
    align-items center
    justify-content space-between
    height 50px
  &__logo
    display flex
    align-items center
    @media (max-width 470px)
      .logo__text
        display none
  &__navbar
    display flex
    align-self stretch
    margin-left 15px
    @media(max-width 1200px)
      position fixed
      top 50px
      bottom 0
      left 0
      right 0
      flex-direction column
      min-width 250px
      margin-left 0
      background #fff
      transform translate(100%)
      overflow auto
      box-shadow inset 0 1px 2px #c9c8c5, 0 1px 2px #c9c8c5
      transition .2s
      &_active
        transform translate(0)
  &__getAdvice
    @media (min-width 1200px)
      position fixed
      right 0
      top 50%
      transform translateY(-50%) rotate(-90deg) scale(1.15)
      transform-origin right bottom 0
    @media (min-width 1200px)
      margin-top -118px
  &__burgerButton
    display none
    padding 5px 0 5px 8px
    background none
    border none
    outline none
    box-shadow none
    cursor pointer
    .icon
      width 25px
      height 25px
      color #333
      cursor pointer
    @media (max-width 1200px)
      display flex
  &_big
    .mainHeader
      &__container
        height 80px
    &.mainHeader_fixed
      .mainHeader
        &__container
          height 50px
