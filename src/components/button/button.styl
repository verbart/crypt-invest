.button
  position relative
  top 0
  display inline-flex
  align-items center
  justify-content center
  min-height 2rem
  line-height 1.15
  padding .5rem 1rem
  border 0
  background color_red
  color white
  font-size 1rem
  text-align center
  cursor pointer
  text-decoration none
  transition .2s
  &:hover
    background #c81e1e
  &_block
    width 100%
  &_lg
    min-height 2.5rem
    padding-left 1.4rem
    padding-right 1.4rem
    font-size 1.15rem
  &_xl
    min-height 2.75rem
    padding-left 2.5rem
    padding-right 2.5rem
    font-size 1.35rem
  &_long
    min-width 150px
    padding-left 2rem
    padding-right 2rem
