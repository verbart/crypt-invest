.videos
  background url(../images/bg-videos.jpg) center / cover
  .video
    position relative
    min-height 80px
    overflow hidden
    border 1px solid #888
    cursor pointer
    transition .2s
    &__caption
      position absolute
      top 0
      left 0
      right 0
      z-index 10
      display block
      padding 10px
      background rgba(#fff, .9)
      font-size 1.3rem
      transition .2s
      @media (max-width 992px)
        font-size 1rem
    &:before
      content ''
      display block
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      background rgba(#000, .1)
    &:after
      content ''
      display block
      position absolute
      top 50%
      left 50%
      width 60px
      height @width
      transform translate(-50%, -50%)
      background url(../images/play-button.png) center / cover
      opacity 0
      transition .2s
      @media (max-width 992px)
        opacity 1
    img
      width 100%
      height auto
    &:hover
      .video__caption
        transform translateY(-100%)
      &:after
        opacity 1
      &:before
        background rgba(#000, 0)
